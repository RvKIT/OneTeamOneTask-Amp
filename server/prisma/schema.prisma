datasource postgres {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt    DateTime      @default(now())
  email        String?
  firstName    String?
  id           String        @id @default(cuid())
  lastName     String?
  password     String
  roles        Json
  updatedAt    DateTime      @updatedAt
  username     String        @unique
  usersInTeams UsersInTeam[]
}

model Task {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  team      Team[]
  updatedAt DateTime @updatedAt
}

model Team {
  createdAt    DateTime      @default(now())
  id           String        @id @default(cuid())
  name         String
  tasks        Task[]
  updatedAt    DateTime      @updatedAt
  usersInTeams UsersInTeam[]
}

model UsersInTeam {
  id      String   @id @default(cuid())
  isAdmin Boolean?
  team    Team     @relation(fields: [teamId], references: [id])
  teamId  String
  user    User     @relation(fields: [userId], references: [id])
  userId  String
}
